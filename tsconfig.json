{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES6",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "checkJs": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "strict": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "exclude": ["./coverage", "./dist", "./prisma", "**/*.test.ts"]
}
