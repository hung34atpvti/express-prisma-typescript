{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "src",
    "esModuleInterop": true,
    "target": "ES5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": [],
  "include": ["src/**/*"]
}
